#! {{CHICKEN_DIR}}/bin/csi -script

(use srfi-1 posix ploticus)

(define (plot-trace model-name trace-file build-dir)

    (change-directory build-dir)   
    (init 'png (sprintf "~A.png" model-name))

    (arg "-maxrows"     "800020")
    (arg "-maxfields"   "4500000")
    (arg "-maxvector"   "4500000")
    
    (proc "getdata"
	  `(("file"            . ,trace-file)
	    ("fieldnames"      . "time V")
	    ))

   (proc "areadef"
	 `(("title"           . "DeSouza 2010 Golgi cell in NEURON")
	   ("titledetails"    . "size=14  align=C")
	   ("rectangle"       . "1 1 8 4")
	   ("xrange"          . "0 3000")
	   ("yrange"          . "-80 65")
	   ))


   (proc "yaxis"
	 `(("stubs"     . "inc 10")
	   ("gridskip"  . "min")
	   ))

   (proc "xaxis"
	 `(("stubs"     . "inc 500")
	   ("gridskip"  . "min")
	   
	   ))

   (proc "lineplot"
	 `(("xfield"      . "time")
	   ("yfield"      . "V")
	   ("linedetails" . "color=red width=.5")
	   ("legendlabel" . "V")
	   ))
   
   (proc "legend"
	 `(("location" . "max-1 max")
	   ("seglen"   . "0.2")
	   ))
   
   (end)
   )


(let ((args (command-line-arguments)))

  (let (
	(model-name (first args))
	(build-dir (second args))
	)	   
			
    (plot-trace "Golgi_protocol" "Golgi_protocol.dat" build-dir)
    (plot-trace "Golgi_reduced_protocol" "Golgi_reduced_protocol.dat" build-dir)

    ))
